<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>tha.view.rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GexfTestServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.GexfTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GexfServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.GexfServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GephiTestServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.GephiTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResultsServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.ResultsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GexfFinalServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.GexfFinalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/v1/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TwitterTestServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.TwitterTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TwitterTestServlet</servlet-name>
        <url-pattern>/v1/snapshotTest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SnapshotServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.SnapshotServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SnapshotServlet</servlet-name>
        <url-pattern>/v1/publicSnapshotExecuter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GexfServlet</servlet-name>
        <servlet-class>tha.downloader.servlet.GexfServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GexfTestServlet</servlet-name>
        <url-pattern>/GexfTestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GexfServlet</servlet-name>
        <url-pattern>/gexf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GephiTestServlet</servlet-name>
        <url-pattern>/GephiTestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultsServlet</servlet-name>
        <url-pattern>/v1/results</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GexfFinalServlet</servlet-name>
        <url-pattern>/v1/gexffinal</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/v1/publicSnapshotExecuter</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
